<zk xmlns:n="native" xmlns:w="client">
	<div width="80%" class="container opacity-0"
		use="karen.core.form.controllers.C_WindowForm"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('ve.smile.viewmodels.views.VMVClasificadorReconocimiento')">

		<div class="row">

				<div class="col s12">
					<div class="input-field col s6">
						<n:label for="nombre">Nombre</n:label>
					<textbox id="nombre" type="text"
						value="@bind(vm.clasificadorReconocimiento.nombre)">
					</textbox>
					</div>
					<div class="input-field col s6">
						<n:label for="descripcion">Descripcion</n:label>
					<textbox id="descripcion" type="text"
						value="@bind(vm.clasificadorReconocimiento.descripcion)">
					</textbox>
					</div>
				</div>
				<div class="col s12">
					<div class="input-field col s12">
						<n:label for="tipo_reconocimiento">Tipo Reconocimiento</n:label>
					<intbox id="tipo_reconocimiento"
						value="@bind(vm.clasificadorReconocimiento.tipoReconocimiento)">
					</intbox>
					</div>
				</div>

		</div>
		<div id="divButtonsForm"
			use="karen.core.form.buttons.containers.DivButtonsForm">
		</div>
	</div>
</zk>
