<zk xmlns:n="native" xmlns:w="client">
	<div width="80%" class="container ${arg.animation_}"
		use="karen.core.form.controllers.C_WindowForm"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('ve.smile.administracion.portalweb.comentarios.album.viewmodels.VM_ComentariosAlbumFormBasic')">

		<div class="row">
			<div sclass="col s12 form">
							<div class="input-field col s6">
								<n:label for="nombre">Nombre</n:label>
								<textbox id="nombre" type="text" disabled="true" value="@bind(vm.comentarioAlbum.fkComunidad.nombre.concat(' ').concat(vm.comentarioAlbum.fkComunidad.apellido))"> </textbox>
							</div>
							
							<div class="input-field col s6">
								<n:label for="correo">Correo</n:label>
								<textbox id="correo" type="text" disabled="true" value="@bind(vm.comentarioAlbum.fkComunidad.correo)"> </textbox>
							</div>
							
							<div class="input-field col s6">
								<n:label for="Comentario">Comentario</n:label>
								<textbox id="Comentario" type="text" disabled="true" value="@bind(vm.comentarioAlbum.comentario)"> </textbox>
							</div>
							
							<div class="input-field col s6">
								<n:label for="Puntuacion">Puntuacion</n:label>
								<textbox id="Puntuacion" type="text" disabled="true" value="@bind(vm.comentarioAlbum.puntuacion)"> </textbox>
							</div>
						
							<separator height="20px"></separator>
								<div class="row">
									<div class="col s12" align="center">
										<div class="col s12">
											<n:h6>Publicar el Comentario</n:h6>
										</div>
										<div class="col s12">
											<div class="input-field col s6 offset-s3">
												<n:div class="switch">
													<n:label>
														NO
														<checkbox
															checked="@bind(vm.publicar)">
														</checkbox>
														SI
													</n:label>
												</n:div>
											</div>
										</div>
									</div>
								</div>


			</div>
		</div>
		
		<div id="divButtonsForm"
			use="karen.core.form.buttons.containers.DivButtonsForm">
		</div>
	</div>
</zk>