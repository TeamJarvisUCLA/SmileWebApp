<zk xmlns:n="native" xmlns:w="client">
	<style>
		.z-comboitem-selected { background: #AFA197 !important; color:
		#ffffff !important; } .z-comboitem:hover,
		.z-comboitem-selected:hover { background: #F0F2DC !important;
		color: #8D7A6F !important; }

		.z-comboitem-selected:hover .z-comboitem-text { color: #8D7A6F
		!important; }

		.z-comboitem-selected .z-comboitem-text { color: #ffffff
		!important; }

		.z-comboitem { text-shadow: none !important; }

		.page-content-main textarea.materialize-textarea { max-height:
		100px; }

		.page-content-main textarea.materialize-textarea:hover,
		.page-content-main textarea.materialize-textarea:active,
		.page-content-main textarea.materialize-textarea:focus{
		overflow-y: auto; }
	</style>

	<div width="80%" class="container ${arg.animation_}"
		use="karen.core.form.controllers.C_WindowForm"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('ve.smile.datos.parametros.participacion.viewmodels.VM_ParticipacionFormBasic')">

		<div class="row">

			<div class="col s12">
				<div class="input-field offset-s2 col s8">
					<n:label for="nombre">Nombre</n:label>
					<textbox id="nombre" type="text"
						value="@bind(vm.participacion.nombre)">
					</textbox>
				</div>
			</div>

			<div sclass="col s12">
				<div class="input-field offset-s2 col s8">
					<n:label class="active" for="fk_multimedia">
						Multimedia
					</n:label>
					<combobox id="fk_multimedia" readonly="true"
						model="@bind(vm.multimedias)"
						selectedItem="@bind(vm.participacion.fkMultimedia)">
						<template name="model">
							<comboitem label="@load(each.nombre)" />
						</template>
					</combobox>
				</div>
			</div>

			<div class="col s12">
				<div class="input-field offset-s2 col s8">
					<n:label for="descripcion">Descripci√≥n</n:label>
					<textbox id="descripcion" type="text"
						multiline="true" rows="3" sclass="materialize-textarea"
						value="@bind(vm.participacion.descripcion)">
					</textbox>
				</div>
			</div>

		</div>

		<div id="divButtonsForm"
			use="karen.core.form.buttons.containers.DivButtonsForm">
		</div>
	</div>
</zk>
