<zk xmlns:n="native" xmlns:w="client">
	<div width="80%" class="container ${arg.animation_}"
		use="karen.core.form.controllers.C_WindowForm"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('ve.smile.viewmodels.views.VMVIndicador')">

		<div class="row">

			<div class="col s12">

				<div class="input-field col s6">
					<n:label for="nombre">Nombre</n:label>
					<textbox id="nombre" type="text"
						value="@bind(vm.indicador.nombre)">
					</textbox>
				</div>

				<div class="input-field col s6">
					<n:label class="active" for="fk_unidad_medida">
						Unidad Medida
					</n:label>
					<combobox id="fk_unidad_medida" readonly="true"
						model="@bind(vm.unidadMedidas)"
						selectedItem="@bind(vm.indicador.fkUnidadMedida)">
						<template name="model">
							<comboitem label="@load(each.nombre)">
							</comboitem>
						</template>
					</combobox>
				</div>
			</div>
			<div class="col s12">
				<div class="input-field col s12">
					<n:label for="descripcion">Descripci√≥n</n:label>
					<textbox id="descripcion" type="text"
						multiline="true" sclass="materialize-textarea"
						value="@bind(vm.indicador.descripcion)">
					</textbox>
				</div>
			</div>

		</div>
		<div id="divButtonsForm"
			use="karen.core.form.buttons.containers.DivButtonsForm">
		</div>
	</div>
</zk>
